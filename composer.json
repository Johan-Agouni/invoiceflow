{
    "name": "johan-agouni/invoiceflow",
    "description": "Système de facturation automatisé pour freelances et TPE",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Johan Agouni",
            "email": "agouni.johan@proton.me"
        }
    ],
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9",
        "dompdf/dompdf": "^2.0",
        "pragmarx/google2fa": "^8.0",
        "bacon/bacon-qr-code": "^3.0",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.50"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html storage/coverage --coverage-text",
        "analyse": "phpstan analyse --memory-limit=512M",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "quality": ["@cs:check", "@analyse", "@test"],
        "migrate": "php database/migrate.php",
        "seed": "php database/seed.php"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
